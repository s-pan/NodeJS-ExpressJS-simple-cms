<html>
    <head>
        <%- include head.ejs%>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/react/15.3.1/react.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/react/15.3.1/react-dom.min.js"></script>
        <script src="/admin/bundle.js"></script>
        <script src="https://www.google.com/recaptcha/api.js"></script>
    </head>
    <body>
        <header>
           <div class="header">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                            <h3><a href="/admin" class="color-white">Admin interface</a></h3>
                        </div>
                    </div>
                </div> 
            </div>       
        </header>
        <div id="root"></div>
        <main id="main" class="container">
            <form action="/admin/login" method="post" id="login-form">
                <div class="form-group">
                    <label for="title">usernama</label>
                    <input type="text" name="username" class="form-control">
                </div>
                <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" class="form-control">
        </div>
       <% if (data.errorMessage) { %>
             <span><%= data.errorMessage %></span>
         <% } %>
       <div class="form-group">
            <div class="g-recaptcha" data-sitekey=<%= data.recaptcha.siteKey %>></div>
       </div>
       <div class="form-group">
          <input type="submit" class="btn btn-lg btn-danger" value="Login">
        </div>
    </form>
</main>
  </body>
</html>