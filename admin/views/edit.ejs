<html>
  <head><%- include head.ejs%></head>

    <%- include header.ejs%>
    <%- include tynimce.ejs%>
    <main id="main" class="container">
       <form id="my-form" action="/upload/" target="form_target" method="post" enctype="multipart/form-data" style="width:0px;height:0;overflow:hidden">
         <input id="img-t" name="image" type="file">
      </form>


    <form action="/admin/edit-page/<%= data.slug %>" method="post" id="my-form">
      <% if (data) { %>
        <div class="form-group">
            <label for="title">Title / Page name</label>
            <input type="text" name="title" value='<%= data.title %>' class="form-control">
        </div>
        <div class="form-group">
          <label for="description">Meta Description</label>
          <input type="text" name="meta-description" class="form-control" value=<%= data.description %>>
        </div>
        <div class="form-group">
          <label for="meta-keywords">Meta keywords</label>
          <input type="text" name="meta-keywords" class="form-control" value=<%= data.keywords%>>
        </div>
        <div class="form-group">  
          <label for="category">Category</label>
          <select name="category" class="form-control">
            <option value=<%= data.category %>><%= data.category %></option>
          </select>
        </div>
        <div class="form-group">
          <input type="file" name="image">
        </div>
        <div class="form-group">
          <textarea id="tinymce" name="textarea" class="form-control"><%= data.textarea %></textarea>
          <!--<div class="g-recaptcha" data-sitekey="6LeOsxsUAAAAAL1exdojhYgR3vPoHt-RioEB2r64"></div>-->
        </div>
         <div class="form-group">
          <input type="submit" class="btn btn-lg btn-danger" value="Submit">
        </div>
      <% } %> 
    </form>
   
<script>

$('#ajax-btn').click(function(e){
  $.ajax({
  method: "POST",
  url: "/t",
}).done(function(msg){
  $('form').html(msg)
})
})

</script>
       <main>

       <% if(typeof locals.img != 'undefined') { %>
          <img src=<%= img %>>
       <% } %>
       
       </main>

     
        <script>
  tinymce.init({
    selector: '#tinymce',
    plugins: ["image"],
    file_picker_callback: function(field_name, url, type, win) {
      if(type=='image') {
        $('#img-t').click(function(){
          console.log(111)
           $('#my-form').submit()
        })
      }
     }
  });
  </script>



    </body>
</html>